{
  "name": "repka-lifeforce",
  "version": "2.0.0",
  "description": "A set of REST apis that will control and monitor various webapps, websites, and services",
  "main": "lifeforce.js",
  "author": "Mark Repka",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/send": "^6.0.0",
    "@prisma/client": "^6.1.0",
    "@supabase/supabase-js": "^2.48.1",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "geoip-country": "^5.0.202412202341",
    "http-status-codes": "^2.3.0",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-easy-ws": "^2.1.0",
    "koa-router": "^13.0.1",
    "mime-types": "^2.1.35",
    "nodemailer": "^6.9.16",
    "openai": "^4.85.3",
    "transmission": "^0.4.10",
    "uuid": "^11.0.5",
    "ws": "^8.18.0"
  },
  "scripts": {
    "build": "npm-run-all clean prisma:generate tsc:emit",
    "tsc:emit": "tsc",
    "tsc:validate": "tsc --noEmit",
    "clean": "rimraf ./build",
    "lint": "eslint --fix .",
    "geoupdate": "node ./node_modules/geoip-country/scripts/updatedb.js",
    "start": "npm run migrate:deploy && node build/lifeforce.js",
    "start:watch": "nodemon --watch src --ext 'ts,json' --exec npm run start:dev",
    "start:dev": "npm-run-all build start",
    "dev": "docker compose up --build",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "migrate:new": "prisma migrate dev --create-only",
    "prisma:generate": "prisma generate"
  },
  "devDependencies": {
    "@types/geoip-country": "^4.0.2",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^29.5.7",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^6.4.16",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.2.4"
}
